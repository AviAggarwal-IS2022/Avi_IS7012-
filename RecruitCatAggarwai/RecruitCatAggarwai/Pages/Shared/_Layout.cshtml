<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecruitCatAggarwai</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecruitCatAggarwai.styles.css" asp-append-version="true" />
   
    <style>

		h2 {
		    font-family: 'Calibri', sans-serif;
		    color: black;
		    text-align: center;
		    text-shadow: 2px 2px 3px grey;
            background-color:whitesmoke		;
            width: "1295px"
		}

		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		html {
			font-size: 16px;
			font-family: Arial, Helvetica, sans-serif;
			color: #555;
		}

		ul,
		nav {
			list-style: none;
		}

		a {
			text-decoration: none;
			opacity: 0.75;
			color: #fff;
		}

		a:hover {
			opacity: 1;
		}

		a.btn {
			border-radius: 4px;
			text-transform: uppercase;
			font-weight: bold;
			text-align: center;
			background-color: #e07e7b;
			opacity: 1;
			transition: all 400ms;
		}

		a.btn:hover {
			background-color: #ce5856;
		}

		section {
			display: flex;
			flex-direction: column;
			align-items: center;
			padding: 100px 80px;
		}

		section1 {
			display: flex;
			flex-direction: column;
			align-items: left;
			padding: 100px 80px;
		}

		section:not(.intro):nth-child(even) {
			background-color: #f5f5f5;
		}

		.grid {
			width: 100%;
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
		}

		hr {
			width: 250px;
			height: 3px;
			background-color: #e07e7b;
			border: 0;
			margin-bottom: 50px;
		}

		.image-1 {
			background-image: url("https://images.unsplash.com/photo-1613068687893-5e85b4638b56?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80");
		}

		.image-2 {
			background-image: url("https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80");
		}

		.image-3 {
			background-image: url("https://images.unsplash.com/photo-1542744173-05336fcc7ad4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1402&q=80");
		}

		section h3.title {
			text-transform: capitalize;
			font: bold 48px "Amatic SC", sans-serif;
			margin-bottom: 30px;
			text-align: center;
		}

		section p {
			max-width: 775px;
			line-height: 2;
			padding: 0 20px;
			margin-bottom: 30px;
			text-align: center;
		}

		media (max-width: 800px) {
			section {
				padding: 50px 20px;
			}
		}

		/*-----------------*/

		.intro {
			position: relative;
			justify-content: center;
			text-align: center;
			min-height: 100vh;
			color: #fff;
		}

		.intro .background-image {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-image: url("https://images.unsplash.com/photo-1661956602116-aa6865609028?ixlib=rb-1.2.1&ixid=MnwxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=764&q=80");
			background-size: cover;
			z-index: -1;
			background-color: #80a3db;
		}

		.intro .background-image1 {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
				background-image: url("https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8dGVhbXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=600&q=60");
			background-size: cover;
			z-index: -1;
			background-color: #80a3db;
		}

		.intro h1 {
			font: 72px "Amatic SC", sans-serif;
			text-shadow: 2px 2px rgba(0, 0, 0, 0.3);
			margin-bottom: 15px;
		}

		.intro h3 {
			font: 28px "Raleway", sans-serif;
			font-weight: 300;
			text-shadow: 2px 2px rgba(0, 0, 0, 0.3);
			margin-bottom: 40px;
		}

		.intro a.btn {
			padding: 20px 46px;
		}

		.intro-content-area {
			opacity: 0;
			margin-top: 100px;
		}

		keyframes slidefade {
			100% {
				opacity: 1;
				margin: 0;
			}
		}

		media (max-width: 800px) {
			.intro {
				min-height: 600px;
			}

			.intro h1 {
				font-size: 48px;
			}

			.intro h3 {
				font-size: 24px;
			}

			.intro a.btn {
				padding: 15px 40px;
			}
		}

		/*-----------------*/

		.services .grid li {
			height: 350px;
			padding: 20px;
			background-clip: content-box;
			background-size: cover;
			background-position: center;
		}

		.services .grid li.small {
			flex-basis: 30%;
		}

		.services .grid li.large {
			flex-basis: 70%;
		}

		media (max-width: 1100px) {
			.services .grid li.small,
			.services .grid li.large {
				flex-basis: 50%;
			}
		}

		media (max-width: 800px) {
			.services .grid li.small,
			.services .grid li.large {
				flex-basis: 100%;
			}
		}

		/*-----------------*/

		.co-info .grid li {
			padding: 50px;
			flex-basis: 50%;
			text-align: center;
		}

		.co-info .grid li i {
			color: #e07e7b;
		}

		.co-info .grid li h4 {
			font-size: 30px;
			margin: 25px 0;
		}

		media (max-width: 800px) {
			.packages .grid li {
				flex-basis: 100%;
				padding: 20px;
			}
		}


		/*-----------------*/

		.testimonials .quote {
			font-size: 22px;
			font-weight: 300;
			line-height: 1.5;
			margin: 40px 0 25px;
		}

		media (max-width: 800px) {
			.testimonials .quote {
				font-size: 18px;
				margin: 15px 0;
			}

			.testimonials .author {
				font-size: 14px;
			}
		}

        /*-----------------*/

		.careers form {
			display: flex;
			align-items: center;
			justify-content: center;
			flex-wrap: wrap;
			width: 60%;
		}

		.careers form .btn {
			padding: 18px 42px;
		}

		.careers form input {
			padding: 15px;
			margin-right: 30px;
			font-size: 18px;
			color: #555;
			flex: 1;
		}

		media (max-width: 1000px) {
			.careers form input {
				flex-basis: 100%;
				margin: 0 0 20px 0;
			}
		}

		/*-----------------*/

		footer {
			display: flex;
			align-items: center;
			justify-content: space-around;
			background-color: #555;
			color: #fff;
			padding: 20px 0;
		}

		footer ul {
			display: flex;
		}

		footer ul li {
			margin-left: 16px;
		}

		footer p {
			text-transform: uppercase;
			font-size: 14px;
			opacity: 0.6;
			align-self: center;
		}

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">RecruitCatAggarwai</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Our_Team">Our Team</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - RecruitCatAggarwai - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>