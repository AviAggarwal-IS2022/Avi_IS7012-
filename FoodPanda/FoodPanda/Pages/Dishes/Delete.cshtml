@page
@model FoodPanda.Pages.Dishes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Dish from System</h1>
<body style="background-color:beige">
<h3>Are you sure you want to delete this dish? This cannot be undone!</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dish.DishName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dish.DishName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dish.Cuisine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dish.Cuisine.CuisineName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Dish.DishId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" input type="submit" class="btn btn-primary">Back to List</a>
    </form>
</div>
</body>