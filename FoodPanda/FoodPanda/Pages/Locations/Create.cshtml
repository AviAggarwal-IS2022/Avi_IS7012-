@page
@model FoodPanda.Pages.Locations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Location?</h1>

<h4>Location</h4>
<hr />
<body style="background-color:beige">
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Location.City" class="control-label"></label>
                <input asp-for="Location.City" class="form-control" />
                <span asp-validation-for="Location.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location.State" class="control-label"></label>
                <input asp-for="Location.State" class="form-control" />
                <span asp-validation-for="Location.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location.Country" class="control-label"></label>
                <input asp-for="Location.Country" class="form-control" />
                <span asp-validation-for="Location.Country" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</br>
<div>
    <a asp-page="Index" input type="submit" class="btn btn-primary">Back to List</a>
</div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
