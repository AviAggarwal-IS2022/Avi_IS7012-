@page
@model FoodPanda.Pages.Reviews.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<body style="background-color:beige">
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Restaurant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Restaurant.RestaurantName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Customer.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Feedback)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Feedback)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" input type="submit" class="btn btn-primary" asp-route-id="@Model.Review?.ReviewId">Edit</a> |
    <a asp-page="./Index" input type="submit" class="btn btn-primary">Back to List</a>
</div>
</body>