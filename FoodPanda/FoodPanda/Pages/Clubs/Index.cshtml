@page
@model FoodPanda.Pages.Clubs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Clubs</h1>

<p>
    <a asp-page="Create" input type="submit" class="btn btn-primary">Add a New Club</a>
    <a asp-page="Search" input type="submit" class="btn btn-primary">Search for a Club</a>
</p>

<body style="background-color:beige">
<table class="table-bordered" style="border-color: black; width:1000px; height: 125px; text-align:center; background-color:bisque">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Club[0].ClubName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club[0].CuisineId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club[0].DishId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club[0].LiquorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Club) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClubName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuisine.CuisineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dish.DishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Liquor.LiquorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.City)
            </td>
            <td>
                <a asp-page="./Edit" input type="submit" class="btn btn-primary" asp-route-id="@item.ClubId">Edit</a> |
                <a asp-page="./Details" input type="submit" class="btn btn-primary" asp-route-id="@item.ClubId">Details</a> |
                <a asp-page="./Delete" input type="submit" class="btn btn-primary" asp-route-id="@item.ClubId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
