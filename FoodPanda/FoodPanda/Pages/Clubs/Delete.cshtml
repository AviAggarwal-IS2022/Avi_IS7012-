        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.Cuisine.CuisineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.DishId)
        </dt>
        <dd class="col-sm-10">
