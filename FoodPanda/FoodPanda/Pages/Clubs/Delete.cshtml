<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.ClubName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.ClubName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.Capacity)
        </dd>
        <dt class="col-sm-2">
