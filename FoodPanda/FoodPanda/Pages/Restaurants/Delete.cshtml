@model FoodPanda.Pages.Restaurants.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Restaurant</h1>

<h3>Are you sure you want to delete this restaurant?</h3>
<body style="background-color:beige">
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.RestaurantName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.RestaurantName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.CuisineId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Cuisine.CuisineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.DishId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Dish.DishName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Location.City)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Restaurant.RestaurantId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" input type="submit" class="btn btn-primary">Back to List</a>
    </form>
</div>
