@page
@model FoodPanda.Pages.Restaurants.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add A Restaurant?</h1>

<h4>Restaurant</h4>
<hr />
<body style="background-color:beige">
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Restaurant.RestaurantName" class="control-label"></label>
                <input asp-for="Restaurant.RestaurantName" class="form-control" />
                <span asp-validation-for="Restaurant.RestaurantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Capacity" class="control-label"></label>
                <input asp-for="Restaurant.Capacity" class="form-control" />
                <span asp-validation-for="Restaurant.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.CuisineId" class="control-label"></label>
                <select asp-for="Restaurant.CuisineId" class="form-control" asp-items="ViewBag.CuisineId"></select>
                <span asp-validation-for="Restaurant.CuisineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.DishId" class="control-label"></label>
                <select asp-for="Restaurant.DishId" class="form-control" asp-items="ViewBag.DishId"></select>
                <span asp-validation-for="Restaurant.DishId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.LocationId" class="control-label"></label>
                <select asp-for="Restaurant.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-page="Index" input type="submit" class="btn btn-primary">Back to List</a>
</div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
