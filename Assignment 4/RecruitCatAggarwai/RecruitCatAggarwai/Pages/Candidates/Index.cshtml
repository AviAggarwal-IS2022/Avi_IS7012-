@page
@model RecruitCatAggarwai.Pages.Candidates.IndexModel

@{
    ViewData["Title"] = "Candidates";
}

<h1>Candidates</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].TargetSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].ExpectedStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].YearsOfExperience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].JobTitle_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Industry_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Company_Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candidate) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsOfExperience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company_Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CandidateId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CandidateId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CandidateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
