@page
@model RecruitCatAggarwai.Pages.JobTitles.IndexModel

@{
    ViewData["Title"] = "Job Titles";
}

<h1>Job Titles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].Job_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].MaxSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].JobType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle[0].YearsofExperienceReqd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JobTitle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsofExperienceReqd)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.JobTitleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.JobTitleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.JobTitleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
